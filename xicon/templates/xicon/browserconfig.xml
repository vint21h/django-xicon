{% load static %}<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            {% for tile in MSAPPLICATION_TILES %}
            <{{ tile.name }} src="{% static tile.src %}"/>
            {% endfor %}
            {% if MSAPPLICATION_TILE_COLOR %}<TileColor>{{ MSAPPLICATION_TILE_COLOR }}</TileColor>{% endif %}
        </tile>
    </msapplication>
</browserconfig>
